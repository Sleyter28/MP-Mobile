<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.market_pymes.fragment.FragmentCxP"
    android:background="@color/main">

    <ImageView
        android:layout_width="380sp"
        app:srcCompat="@drawable/iso_esquina"
        android:id="@+id/logoCxc"
        android:scaleType="fitXY"
        android:maxHeight="@android:dimen/app_icon_size"
        android:maxWidth="@android:dimen/app_icon_size"
        tools:ignore="ContentDescription"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="380sp" />

    <TextView
        android:text="text view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/Resp"
        android:layout_below="@+id/valueCxP"
        android:layout_alignLeft="@+id/valueCxP"
        android:layout_alignStart="@+id/valueCxP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuentas por Pagar"
        android:textSize="36sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="normal|bold"
        tools:ignore="HardcodedText"
        android:textColor="@color/colorAccent"
        android:id="@+id/lblCxP"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/valueCxP"
        android:paddingBottom="16dp"
        android:paddingTop="20dp"
        tools:ignore="RtlHardcoded,UnknownIdInLayout"
        android:hint="@string/nameCod"
        android:layout_marginLeft="74dp"
        android:layout_marginStart="74dp"
        android:layout_below="@+id/lblCxP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:textSize="24sp" />

    <Button
        android:text="@string/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCxP"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/background"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_alignBottom="@+id/valueCxP"
        android:layout_toRightOf="@+id/valueCxP"
        android:layout_toEndOf="@+id/valueCxP"
        android:textSize="24sp" />

</RelativeLayout>
