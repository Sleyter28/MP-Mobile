<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recicladorCxP"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:elevation="20dp">

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_below="@+id/txtEmail"
            android:textColorHint="@android:color/black"
            android:gravity="center"
            android:layout_width="230sp"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            app:hintTextAppearance="@style/TextAppearance.Design.Hint">

            <EditText

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:id="@+id/valueCxP"
                tools:ignore="UnknownIdInLayout"
                android:ems="10"
                android:hint="@string/nameCodDes"
                android:layout_below="@+id/lblCxC"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="15dp"/>
        </android.support.design.widget.TextInputLayout>

        <ImageButton
            android:layout_height="33dp"
            android:id="@+id/btnCxP"
            style="@android:style/Widget.Button"
            android:layout_alignBottom="@+id/valueCxC"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:layout_marginLeft="50sp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:background="@drawable/boton_turquesa"
            android:src="@drawable/icon_search"
            app:srcCompat="@drawable/lupa"
            android:layout_width="38dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15sp"
        app:srcCompat="@drawable/gradient"
        android:id="@+id/imageView2"
        android:background="#00000000"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reciclerxPagar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>
</LinearLayout>
