<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="@color/main">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/graf"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="450dp" />

    <TextView
        android:text="@string/credito1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/lblCredit"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/lblContado1"
        android:layout_height="wrap_content"
        android:id="@+id/Vcredito"
        android:textSize="30sp"
        tools:ignore="UnknownId"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contado1"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent"
        android:id="@+id/lblCredit"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:text="@string/lblCredito1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Vcontado"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        tools:ignore="UnknownId"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/lblCredit"
        android:layout_alignLeft="@+id/Vcredito"
        android:layout_alignStart="@+id/Vcredito" />

</RelativeLayout>
